<Configuration status="INFO">
    <Appenders>
        <File name="MyFileAppender" fileName="logs/Logger.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="MyFileAppender"/>
        </Root>
    </Loggers>
</Configuration>